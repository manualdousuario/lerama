#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

log_success() {
    echo -e "${GREEN}[âœ“] $1${NC}"
}

log_info() {
    echo -e "${YELLOW}[i] $1${NC}"
}

# Create crontab with environment variables (runtime substitution)
log_info "Setting up crontab with environment variables..."
CRONTAB_PROCESS_FEEDS="${CRONTAB_PROCESS_FEEDS:-* * * * *}"
CRONTAB_FEED_STATUS="${CRONTAB_FEED_STATUS:-0 0 * * *}"
CRONTAB_PROXY="${CRONTAB_PROXY:-0 0 * * *}"

cat > /etc/crontab.d/lerama << EOL
${CRONTAB_PROCESS_FEEDS} /usr/local/bin/php /app/bin/lerama feed:process > /var/log/lerama-feed_process.log
${CRONTAB_FEED_STATUS} /usr/local/bin/php /app/bin/lerama feed:check-status > /var/log/lerama-check_status.log
${CRONTAB_PROXY} /usr/local/bin/php /app/bin/lerama proxy:update > /var/log/lerama-proxy_update.log
EOL

chmod 0644 /etc/crontab.d/lerama
log_success "Crontab configured: PROCESS_FEEDS='${CRONTAB_PROCESS_FEEDS}', FEED_STATUS='${CRONTAB_FEED_STATUS}', PROXY='${CRONTAB_PROXY}'"